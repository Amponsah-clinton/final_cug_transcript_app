RewriteEngine On

# Handle static files
RewriteCond %{REQUEST_URI} ^/static/(.*)$
RewriteRule ^static/(.*)$ /cugtranscript/static/$1 [L]

# Handle media files
RewriteCond %{REQUEST_URI} ^/media/(.*)$
RewriteRule ^media/(.*)$ /cugtranscript/media/$1 [L]

# Redirect all other requests to index.py
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /cugtranscript/index.py [QSA,L]
