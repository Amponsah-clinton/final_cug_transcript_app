RewriteEngine On

# Enable Python CGI for Hostinger
AddHandler cgi-script .py
Options +ExecCGI

# Handle static files
RewriteCond %{REQUEST_URI} ^/cugtranscript/static/(.*)$
RewriteRule ^static/(.*)$ /cugtranscript/static/$1 [L]

# Handle media files
RewriteCond %{REQUEST_URI} ^/cugtranscript/media/(.*)$
RewriteRule ^media/(.*)$ /cugtranscript/media/$1 [L]

# Redirect all other requests to app.py
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /cugtranscript/app.py [QSA,L]
